<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/thread_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11"
        android:gravity="center"
        android:hint="@string/enter_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/thread_body"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_weight="0.73"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/enter_comment"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/address_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/select_thread_location"
        android:textAppearance="?android:attr/textAppearanceSmall" />

<!--
    <EditText
        android:id="@+id/address_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11"
        android:ems="10"
        android:hint="@string/address_thread_hint"
        android:gravity="center"
        android:inputType="textPostalAddress" />
-->

    <Spinner
        android:id="@+id/select_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/location_preferences_array"
        android:gravity="center|fill" />

    <Button
        android:id="@+id/thread_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/insert_image" 
        android:background="?android:selectableItemBackground"/>

</LinearLayout>
